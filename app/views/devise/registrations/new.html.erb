<div class="container">
  <div class="row">
    <div class="col-md-4 col-centered">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">我也要报名</h3>
        </div>
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :name, required: true ,:label => "姓名"%>
            <%= f.input :email, required: true, autofocus: true,:label => "电子邮件" %>
            <%= f.input :password, required: true,
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) ,:label => "密码 理解不了请背起"%>
            <%= f.input :password_confirmation, required: true,:label => "请立刻有感情的背诵密码" %>

             <%= f.input :is_admin, :label => false,
                as: :radio_buttons,
                collection:  [['大神把bug捡走', false],['小白把bug扔这', true]],
                required: true %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "填好了" %>
          </div>
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
